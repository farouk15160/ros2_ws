<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="gripper">
    <xacro:macro name="gripper" params="parent_link *origin_block">
        <link name="gripper_base">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://visiona_bridge/meshes/gripper_joint.stl"
                        scale="0.001 0.001 0.001" />
                </geometry>
                <!-- <material name="PLA">
                    <color rgba="0.0 1.0 0.0 0.5" />
                    <texture filename="" />
                </material> -->
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://visiona_bridge/meshes/gripper_joint.stl"
                        scale="0.001 0.001 0.001" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.01" />
                <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
            </inertial>
        </link>

        <joint name="${parent_link}_to_gripper_base_joint" type="revolute">
            <parent link="${parent_link}" />
            <child link="gripper_base" />
            <xacro:insert_block name="origin_block" />

            <axis xyz="0 1 0.0" />
            <limit lower="-3.0" upper="3.0" effort="0.0" velocity="0.0" />
        </joint>

        <link name="left_finger_link">
            <visual>
                <!-- UPDATE THIS: Use the mesh for the left finger/gear -->
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://visiona_bridge/meshes/gripper_left_finger.stl"
                        scale="0.001 0.001 0.001" />
                </geometry>
                <!-- <material name="PLA">
                    <color rgba="0.0 1.0 0.0 0.1" />
                    <texture filename="" />
                </material> -->
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://visiona_bridge/meshes/gripper_left_finger.stl"
                        scale="0.001 0.001 0.001" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.01" />
                <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
            </inertial>
        </link>

        <link name="right_finger_link">
            <visual>

                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://visiona_bridge/meshes/gripper_right_finger.stl"
                        scale="0.001 0.001 0.001" />
                </geometry>
                <!-- <material name="PLA">
                    <color rgba="0.0 1.0 0.0 0.1" />
                    <texture filename="" />
                </material> -->
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://visiona_bridge/meshes/gripper_right_finger.stl"
                        scale="0.001 0.001 0.001" />
                </geometry>
            </collision>
            <inertial>
                <mass value="0.01" />
                <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
            </inertial>
        </link>

        <joint name="left_finger_joint" type="revolute">
            <parent link="gripper_base" />
            <child link="left_finger_link" />
            <!-- Updated origin from your code -->
            <origin xyz="0.0 0.0 0" rpy="0 0 0" />
            <!-- Updated axis from your code -->
            <axis xyz="0 0 1" />
            <!-- Updated limits from your code -->
            <limit lower="-1.0" upper="1" effort="10" velocity="1.0" />
        </joint>

        <joint name="right_finger_joint" type="revolute">
            <parent link="gripper_base" />
            <child link="right_finger_link" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <axis xyz="0 0 1" />
            <limit lower="-1.0" upper="1" effort="10" velocity="1.0" />

            <!-- THE MAGIC: This tells this joint to mimic the left one, with a -1 multiplier -->
            <mimic joint="left_finger_joint" multiplier="-1" offset="0.0" />
        </joint>

    </xacro:macro>

</robot>