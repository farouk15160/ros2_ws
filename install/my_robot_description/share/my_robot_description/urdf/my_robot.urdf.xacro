<?xml version="1.0"?>
<robot name="my_robot_arm" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="package_path" value="$(find my_robot_description)" />

  <!-- Links and Joints are here... they are correct and have been omitted for brevity -->
  <link name="world" />
  <link name="base">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="${package_path}/meshes/base.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="${package_path}/meshes/base.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.9"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>
  <link name="base_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="${package_path}/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="${package_path}/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>
  <link name="link_1_shoulder">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="${package_path}/meshes/link_1_shoulder.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="${package_path}/meshes/link_1_shoulder.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.6"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>
  <link name="link_2_elbow">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="${package_path}/meshes/link_2_elbow.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="${package_path}/meshes/link_2_elbow.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.4"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>
  <link name="link_3_wrist">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="${package_path}/meshes/link_3_wrist.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="${package_path}/meshes/link_3_wrist.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>
  <link name="link_4_wrist">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="${package_path}/meshes/link_4_wrist.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="${package_path}/meshes/link_4_wrist.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>
  <link name="link_5_wrist_roll">
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.02"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.02"/>
      </geometry>
    </collision>
  </link>
  <joint name="world_to_base_fixed" type="fixed">
    <parent link="world"/>
    <child link="base"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>
  <joint name="joint1" type="revolute">
    <parent link="base"/>
    <child link="base_link"/>
    <origin rpy="0 0 0" xyz="0 0 0.076"/>
    <axis xyz="0 0 1"/>
    <limit effort="100" lower="-3.14" upper="3.14" velocity="1.0"/>
  </joint>
  <joint name="joint2" type="revolute">
    <parent link="base_link"/>
    <child link="link_1_shoulder"/>
    <origin rpy="0 0 0" xyz="0.0145 0 0.07"/>
    <axis xyz="1 0 0"/>
    <limit effort="100" lower="-1.5" upper="1.5" velocity="1.0"/>
  </joint>
  <joint name="joint3" type="revolute">
    <parent link="link_1_shoulder"/>
    <child link="link_2_elbow"/>
    <origin rpy="0 0 0" xyz="-0.033 0 0.18"/>
    <axis xyz="1 0 0"/>
    <limit effort="100" lower="-1.5" upper="1.5" velocity="1.0"/>
  </joint>
  <joint name="joint4" type="revolute">
    <parent link="link_2_elbow"/>
    <child link="link_3_wrist"/>
    <origin rpy="-1.5707963267948966 0 0" xyz="0.029 0 0.117"/>
    <axis xyz="1 0 0"/>
    <limit effort="100" lower="-3.14" upper="3.14" velocity="1.0"/>
  </joint>
  <joint name="joint5" type="revolute">
    <parent link="link_3_wrist"/>
    <child link="link_4_wrist"/>
    <origin rpy="3.141592653589793 0 0" xyz="-0.018 0 -0.12"/>
    <axis xyz="1 0 0"/>
    <limit effort="100" lower="-3.14" upper="3.14" velocity="1.0"/>
  </joint>
  <joint name="joint6" type="revolute">
    <parent link="link_4_wrist"/>
    <child link="link_5_wrist_roll"/>
    <origin rpy="0 0 0" xyz="0 0 0.05"/>
    <axis xyz="0 1 0"/>
    <limit effort="100" lower="-3.14" upper="3.14" velocity="1.0"/>
  </joint>
  
  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="joint1">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="joint2">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="joint3">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="joint4">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="joint5">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="joint6">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

  <!-- =================================================================== -->
  <!-- === THE FINAL FIX: ADD THE GAZEBO PLUGIN AND CONTROLLER CONFIG  === -->
  <!-- This tag tells Gazebo to load the ros2_control plugin and where to find its parameters. -->
  <!-- =================================================================== -->
  <gazebo>
    <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <parameters>$(find my_robot_description)/config/my_robot_arm_controllers.yaml</parameters>
    </plugin>
  </gazebo>

</robot>

